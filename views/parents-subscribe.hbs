<div class="container">
    {{#schoolClass}}
    <div class="mt-3">
        <h1>Subscribe to {{name}}</h1>
    </div>

    <p>Enter your details to receive SchoolTalk questions and hints for this class. </p>

    <div class="card">
        <div class="card-body bg-form">
            <form action="/parents/schools/{{schoolId}}/classes/{{classId}}/subscribe" method="POST">
                <div class="form-group">
                    <label for="inputEmail">Your email address</label>
                    <input type="email" placeholder="name@example.com" class="form-control" id="inputEmail">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Subscribe</button>
                </div>
            </form>
        </div>
    </div>
    {{/schoolClass}}
</div>

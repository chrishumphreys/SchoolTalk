<div class="container">

    <div>
        <h2>Please select your child's class/group</h2>
    </div>

    {{#each classes}}
    <div class="card border-success mb-3" style="width: 20rem;">
        <div class="card-body">
            <h4 class="card-title">{{name}}</h4>
            <p class="card-text text-center">{{description}}</p>
            <a href="/parents/schools/{{schoolId}}/classes/{{classId}}/subscribe" class="btn btn-primary">Subscribe to this class</a>
        </div>
    </div>
    {{/each}}

</div>